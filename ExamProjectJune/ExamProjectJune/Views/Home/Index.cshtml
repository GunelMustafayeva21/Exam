
@using ExamProjectJune.ViewModels
@model HomeViewModel
<section id="FirstPage">
    <div class="myContainer Banner d-flex justify-content-center">
        <div class="row ">
            <div class="col-md-6 my-5">
                <div class=" banner-right">
                    <img src="~/images/mobile.png" alt="Mobile" class="w-100 rounded">
                </div>
            </div>
            <div class="col-md-6  my-5  ">
                <div class="text-center banner-left align-items-center py-0 py-md-5 ">
                    <h1>Responsive App Landing Page</h1>
                    <p>Bootstrap Based Responsive Landing Page Template.</p>
                    <a href="#" class="btn btn-success"><i class="bi bi-tablet fw-bold"> &nbsp; &nbsp;</i>APP STORE</a>
                </div>
            </div>
        </div>
    </div>
</section>


<section id="icons">
    <div class="container my-5">
        <div class="row">
            @foreach (Service item in Model.services)
            {
                <div class="col-md-4">
                    <i class="@item.Icon mb-5"></i>
                    <h2>@item.Title</h2>
                    <p>@item.Text</p>
                </div>
            }

            
        </div>
    </div>
</section>

<section id="peopleSay">
    <div class="container text-center">
        <div class="SlideShow my-5 ">
            <h1>What people say</h1>
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner text-center">
                    <div class="carousel-item active">
                        <h2>"Etizzle laoreet doggy dope nisl. Dang pulvinizzle, ipsizzle dawg."</h2>
                        <h3>Martin Nizzle</h3>
                    </div>
                    <div class="carousel-item">
                        <h2>"Crazy tellus urna, yo mamma check out this, eleifend you son of a bizzle."</h2>
                        <h3>Jennifer Aliquizzle</h3>
                    </div>
                    <div class="carousel-item">
                        <h2>"Praesent i saw beyonces tizzles and my pizzle went crizzle turpizzle."</h2>
                        <h3>William Lorizzle</h3>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</section>

<section id="Contact">
    <div class="container my-5  text-center ">
        <h2>Contact us</h2>
        <p>Want to chat? Send us a message. We'd love to hear from you!</p>
        <div class="row align-items-center">
            <div class="col-md-6">

                <input type="text" class="form-control mb-5" placeholder="Name">
            </div>
            <div class="col-md-6">

                <input type="password" class="form-control mb-5" placeholder="Password">
            </div>

            <div class="col-md-12">
                <textarea name="" id="" cols="120" rows="7" placeholder="Add Message..."></textarea>
            </div>
        </div>
    </div>
</section>


